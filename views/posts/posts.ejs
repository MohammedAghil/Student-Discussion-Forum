<%-include('../partials/header.ejs')%>
<div class="container">
    <div class="text-center">
        <h1 class="bg-secondary text-light">Forum</h1>
        <% if(user){ %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create New Post</button>
            <%-include('./new.ejs',{categories:categories})%>
        <%}%>
    </div>
    <br>
    <form method="get" action="/posts/search">
    <div class="input-group mb-3">
            
            <input type="text" class="form-control" name="search" placeholder="Search the Forum">
            <div class="input-group-append">
            <select name="filter">
                <option selected value="title">Title</option>
                <option value="content">Content</option>
                <option value="category">Category</option>
            </select>
            <button class="btn btn-success" type="submit">Go</button>  
            </div>
        </div>
    </form>
    <div class="container">
    
   
   <% let i =0; %>
   <% while (i < posts.length){%>
        <div class="row">
            <div class="col-sm-4">
                <%-include('./posttile.ejs',{post:posts[i]})%>
            </div>
            <%if(i+1< posts.length){ %>
            <div class="col-sm-4">
                    <%-include('./posttile.ejs',{post:posts[i+1]})%>
            </div>
            <%}%>
            <%if(i+2< posts.length){ %>
            <div class="col-sm-4">
                    <%-include('./posttile.ejs',{post:posts[i+2]})%>
                </div>
            <%}%>
        </div>
   <%     i=i+3;} %> 
</div>
</div>
