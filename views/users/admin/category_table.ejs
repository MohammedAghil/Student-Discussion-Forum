
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create New Category</button>
<%-include('./new.ejs')%>
<%if(categories.length>0) {%>
    <h3>List of Categories</h3>
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Category Name</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
    <%categories.forEach(category => {%>
        <tr>
            <td><%=category.category%></td>
            <form>
                <td><button formmethod="post" formaction="/categories/<%=category._id%>?_method=DELETE" class="btn btn-danger">Delete</button></td>
            </form>
        </tr>
    <%});
    %>
        </tbody>
    </table>
<% } else {%>
    <p>You have not created any categories</p>
<%}%>
